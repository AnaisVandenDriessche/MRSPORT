{% extends 'layout.html.twig' %}
{% block title %}User Edit{% endblock %}
{% block slider %}{% endblock %}

{% block body %}

    {% block user %}
    <div class="container-fluid">
    <div class="row container_dash_edit">   
        <div class="container">
            <div class="col-md-7 mr-auto ml-auto wrap-club-edit2">
        <h1>Users list</h1>
        <table>
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td><a href="{{ path('user_show', { 'id': user.id }) }}">{{ user.id }}</a></td>
                    <td>
                        <ul>
                            <li>
                                <a href="{{ path('user_show', { 'id': user.id }) }}">show</a>
                            </li>
                            <li>
                                <a href="{{ path('user_edit', { 'id': user.id }) }}">edit</a>
                            </li>
                        </ul>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <ul>
            <li>
                <a href="{{ path('user_new') }}">Create a new user</a>
            </li>
        </ul>
    </div>
    </div>
    </div>
    {% endblock %}
{% endblock %}
